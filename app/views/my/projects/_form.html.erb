<%= form_for [:my, @project] do |f| %>

  <% unless f.object.errors.empty? %>
    <% if @project.errors.any? %>
  		<div id="error_explanation" class="alert alert-error">
    		<h3><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h3>
			<ul>
    		<% @project.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
    		<% end %>
    	</ul>
  		</div>
 		<% end %>
  <% end %>

  <div class="span6">
    <%= f.label :title %>
    <%= f.text_field :title, class: "input-block-level" %>
    <%= f.label :teaser %>
    <%= f.text_field :teaser, class: "input-block-level" %>
    <%= f.label :description %>
    <%= f.text_area :description, class: "input-block-level" %>
    <%= f.label :goal %>
    <%= f.text_field :goal, class: "input-block-level" %>
    
    <div class="form-actions">
      <%= f.submit local_variable, class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>