<h1><%= @project.title %></h1>

<h4>Add Image</h4>

<%= form_for [:my, @project, @image] do |f| %>
	<%= f.file_field :file %>
	<%= f.submit %>
<% end %>

<h4>This project has <%= pluralize(@images.count, "image") %></h4>

<br>

<ul class="thumbnails">
	<% @images.each do |img| %>
		<li class = "span3">
			<a href = "<%= img.file.url %>">
				<img src="<%= img.file.thumb.url %>"></img>
			</div>
		</li>
	<% end %>

</ul>