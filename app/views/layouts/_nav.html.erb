<div class="navbar">
  <div class="navbar-inner">
   	<%= link_to "CrowdFunder", root_path, :class => "brand" %>
    <ul class="nav">
    	<li class="<%= "active" if controller_name == "welcome" %>"><%= link_to "Home", root_path %></li>
      <li class="<%= "active" if params[:controller] == "projects" %>"><%= link_to "Projects", projects_path %></li>
      <li class="<%= "active" if params[:controller] == "my/projects" %>"><%= link_to "My Projects", my_projects_path %></li> 
    </ul>
  
	  <div class="pull-right">
		  <% if logged_in? %>
		    <%= link_to 'Logout', :session, :method => :delete, class: 'btn' %>
		  <% else %>
		    <%= link_to 'Sign Up', [:new, :user], class: 'btn btn-primary' %>
		    <%= link_to 'Sign In', [:new, :session], class: 'btn btn-success' %>
		  <% end %>
		</div>

	</div>

</div>


